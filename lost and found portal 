<script>
  // Switch visible section
  function showSection(id){
    document.querySelectorAll("section").forEach(sec=>sec.classList.add("hidden"));
    document.getElementById(id).classList.remove("hidden");
  }

  // Retrieve stored data
  let lostItems = JSON.parse(localStorage.getItem("lostItems")) || [];
  let foundItems = JSON.parse(localStorage.getItem("foundItems")) || [];

  // Lost form handling
  document.getElementById("lostForm").addEventListener("submit", e=>{
    e.preventDefault();
    const item = {
      type:"Lost",
      name:document.getElementById("lostName").value,
      desc:document.getElementById("lostDesc").value,
      location:document.getElementById("lostLocation").value,
      contact:document.getElementById("lostContact").value,
      date:new Date().toLocaleDateString()
    };
    lostItems.push(item);
    localStorage.setItem("lostItems", JSON.stringify(lostItems));
    alert("âœ… Lost item reported!");
    e.target.reset();
    showSection('itemsSection');
    displayItems();
  });

  // Found form handling
  document.getElementById("foundForm").addEventListener("submit", e=>{
    e.preventDefault();
    const item = {
      type:"Found",
      name:document.getElementById("foundName").value,
      desc:document.getElementById("foundDesc").value,
      location:document.getElementById("foundLocation").value,
      contact:document.getElementById("foundContact").value,
      date:new Date().toLocaleDateString()
    };
    foundItems.push(item);
    localStorage.setItem("foundItems", JSON.stringify(foundItems));
    alert("âœ… Found item reported!");
    e.target.reset();
    showSection('itemsSection');
    displayItems();
  });

  // Display items
  const itemsList = document.getElementById("itemsList");
  const searchBox = document.getElementById("searchBox");

  function displayItems(filter=""){
    const allItems = [...lostItems, ...foundItems];
    itemsList.innerHTML = "";
    allItems
      .filter(i=>i.name.toLowerCase().includes(filter.toLowerCase()))
      .forEach(item=>{
        const card = document.createElement("div");
        card.className = `item-card ${item.type.toLowerCase()}`;
        card.innerHTML = `
          <h3>${item.type}: <b>${item.name}</b></h3>
          <p><strong>Description:</strong> ${item.desc}</p>
          <p><strong>Location:</strong> ${item.location}</p>
          <p><strong>Date:</strong> ${item.date}</p>
          <p><strong>Contact:</strong> ${item.contact}</p>
        `;
        itemsList.appendChild(card);
      });
  }

  searchBox.addEventListener("input", e=>displayItems(e.target.value));

  // Show home on load
  showSection('home');
  displayItems();
</script>
</body>
